<div class="card-deck">
  <% @flats.each do |item| %>
  <div class="mb-4">
    <div class="card my-3 shadow-sm" style="width: 18rem;">
      <div class="card-body bg-light border-bottom">
        <h5 class="card-title"><%= item.name %></h5>
        <h6 class="card-subtitle mb-2 text-muted"><%= item.address %></h6>
        <p class="card-text"><%= item.description %></p>
        <div class='d-flex'>
          <div class='d-flex align-items-center'>
            <i class="fas fa-user-friends "></i>
            <p class="my-0 px-1 font-weight-bolder"><%= item.number_of_guests %></p>
          </div>
          <div class='d-flex align-items-center px-2'>
            <img src="https://cdn.iconscout.com/icon/free/png-512/euro-symbol-1781279-1513600.png" alt="euro" class="custom-icon">
            <p class="my-0 font-weight-bolder "><%= item.price_per_night %></p>
          </div>
      </div>
    </div>
      <div class='bg-white card-body'>
        <%= link_to "More info", root_path, class: "" %> 
      </div>
    </div>
  </div>
  <% end %>
</div>